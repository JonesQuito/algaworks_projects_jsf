<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- MODIFICA O FORMATO DAS MENSAGENS DE ERRO PARA MOSTRAR OS DETALHES DE 
		FORMA MAIS APROPRIADO PARA UM ESTÁGIO DE DESENVOLVIMETNO -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- DECLARA UM SERVLET DE NOME 'Faces Servlet' APONTANDO PARA A CLASSE 
		'javax.faces.webapp.FacesServlet -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- MAPEIA O SERVLET CRIADO PARA RESPONDER A TODAS AS REQUISIÇÕES REALIZADOS 
		PARA QUALQUER ARQUIVO .xhtml -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

</web-app>